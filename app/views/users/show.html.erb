<% provide(:title, @user.name) %>

<h1>プロフィール</h1>
<div class="row">
  
  <div class="col-md-6 col-md-offset-3">
    <table class="table table-bordered" id="table-user">
      <tbody>
        <tr>
          <th class="active col-md-3"><%= User.human_attribute_name :id %></th>
          <td class="col-md-9"><%= @user.id %></td>
        </tr>
        <tr>
          <th class="active"><%= User.human_attribute_name :name %></th>
          <td><%= @user.name %></td>
          
          </tr>
        <tr>
          
          
          <th class="active"><%= User.human_attribute_name :メール %></th>
          <td><%= @user.email %></td>
          
           
          </td>
        </tr>
        <tr>
          
          
          <th class="active">作成日</th>
          <td><%= l(@user.created_at,format: :long) %></td>
        </tr>
        </tr>
      </tbody>
    </table>
  </div>    
</div>
