<% provide(:title, @user.name) %>


<h1>タスク詳細</h1>

<div class="row">
<div class="col-md-10 col-md-offset-1">
<table class="table table-bordered" id="table-task">
 
      <tbody>
        <tr>
          <th class="active col-md-2"><%= Task.human_attribute_name :id %></th>
          <td class="col-md-10"><%= @task.id %></td>
        </tr>
        <tr>
          <th class="active"><%= Task.human_attribute_name :name %></th>
          <td><%= @task.name %></td>
        </tr>
        <tr>
          <th class="active"><%= Task.human_attribute_name :description %></th>
           <td><%= @task.content %></td>
            
          </td>
        </tr>
        <tr>
          <th class="active">作成日</th>
          <td><%= l(@task.created_at,format: :long) %></td>
        </tr>
        <tr>
          <th class="active">更新日</th>
          <td><%= l(@task.updated_at,format: :long) %></td>
        </tr>
        
      
	      </tr>
	    </tbody>
	  </table>
	  <div>
      <%= link_to "編集", edit_user_task_path(@user.id, @task.id), class: "btn btn-lg btn-success" %>
      <%= link_to "削除", user_task_path(@user, @task), method: :delete, data:{ confirm: '本当によろしいですか？'}, class: "btn btn-danger btn-lg" %>
	  </div>
  </div>
</div>
            



